{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",   
    "rootDir": "./src",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],         
  "exclude": ["node_modules", "dist"]
}
